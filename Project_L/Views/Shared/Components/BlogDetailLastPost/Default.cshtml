@using EntityLayer.Concrete
@model List<Blog>
<div class="sidebar-item recent-posts">
    <h3 class="sidebar-title">Son Postlar</h3>
    @foreach (var item in Model)
    {    
    <div class="mt-3">

        <div class="post-item mt-3">
            <img src="@item.BlogImage" alt="">
            <div>
                <h4><a href="/Blog/Index/@item.BlogID">@item.BlogName</a></h4>
                <time datetime="2020-01-01">@item.BlogCreationDate.Date.ToString("dd MMM yyyy")</time>
            </div>
        </div><!-- End recent post item-->

    </div>
    }
</div><!-- End sidebar recent posts-->