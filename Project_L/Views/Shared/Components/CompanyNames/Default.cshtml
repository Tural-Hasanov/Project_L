@using EntityLayer.Concrete
@model List<PartnerCompany>
    <!-- ======= Features Section ======= -->
<section id="features" class="features section-bg">
    <div class="section-header">
        <h2>Tərəfdaşlar</h2>
    </div>
    <div class="container" data-aos="fade-up">

        <ul class="nav nav-tabs row  g-2 d-flex">

            <li class="nav-item col-3">

                <a class="nav-link active show" data-bs-toggle="tab" data-bs-target="#tab-1">
                    <h4>BP</h4>
                </a>
            </li><!-- End tab nav item -->

            <li class="nav-item col-3">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-2">
                    <h4>Tekfen</h4>
                </a><!-- End tab nav item -->

            <li class="nav-item col-3">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-3">
                    <h4>BH</h4>
                </a>
            </li><!-- End tab nav item -->

            <li class="nav-item col-3">
                <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-4">
                    <h4>WG</h4>
                </a>
            </li><!-- End tab nav item -->

        </ul>

        <div class="tab-content">

            <div class="tab-pane active show" id="tab-1">
                <div class="row">
                    <div class="col-lg-6 order-2 order-lg-1 mt-3 mt-lg-0 d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="100">
                        <h3>@ViewBag.bp</h3>
                        <p class="fst-italic">
                            @ViewBag.bpd
                        </p>
                    </div>
                    <div class="col-lg-6 order-1 order-lg-2 text-center" data-aos="fade-up" data-aos-delay="200">
                        <img src="~/AzfenImages/PartnerCompanyPictures/bp.jpg" alt="" class="img-fluid">
                    </div>
                </div>
            </div><!-- End tab content item -->

            <div class="tab-pane" id="tab-2">
                <div class="row">
                    <div class="col-lg-6 order-2 order-lg-1 mt-3 mt-lg-0 d-flex flex-column justify-content-center">
                        <h3>@ViewBag.tekfen</h3>
                        <p class="fst-italic">
                            @ViewBag.tekfend
                        </p>
                    </div>
                    <div class="col-lg-6 order-1 order-lg-2 text-center">
                        <img src="~/AzfenImages/PartnerCompanyPictures/tekfen.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div><!-- End tab content item -->

            <div class="tab-pane" id="tab-3">
                <div class="row">
                    <div class="col-lg-6 order-2 order-lg-1 mt-3 mt-lg-0 d-flex flex-column justify-content-center">
                        <h3>@ViewBag.bakerhuges</h3>
                        <p class="fst-italic">
                            @ViewBag.bakerhugesd
                        </p>
                    </div>
                    <div class="col-lg-6 order-1 order-lg-2 text-center">
                        <img src="~/AzfenImages/PartnerCompanyPictures/bakerhuges.jpg" alt="" class="img-fluid">
                    </div>
                </div>
            </div><!-- End tab content item -->

            <div class="tab-pane" id="tab-4">
                <div class="row">
                    <div class="col-lg-6 order-2 order-lg-1 mt-3 mt-lg-0 d-flex flex-column justify-content-center">
                        <h3>@ViewBag.woodgroup</h3>
                        <p class="fst-italic">
                            @ViewBag.woodgroupd
                        </p>
                    </div>
                    <div class="col-lg-6 order-1 order-lg-2 text-center">
                        <img src="~/AzfenImages/PartnerCompanyPictures/woodgroup.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div><!-- End tab content item -->

        </div>

    </div>
</section><!-- End Features Section -->
