@using EntityLayer.Concrete
@model List<Blog>
<!-- ======= Recent Blog Posts Section ======= -->
<section id="recent-blog-posts" class="recent-blog-posts">
    <div class="container" data-aos="fade-up">
        <div class=" section-header">
            <h2>Sonuncu Bloglar</h2>
            <p>Yeniliklərdən xəbərdar olmaq üçün bizimlə qalın</p>
        </div>

        <div class="row gy-5">

            @foreach (var item in Model)
            {


                <div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="post-item position-relative h-100">

                        <div class="post-img position-relative overflow-hidden" style="height:300px;">
                            <img src="@item.BlogImage" class="img-fluid" alt="" style="object-fit: fill; height: 300px; width:450px">
                            <span class="post-date">@item.BlogCreationDate.Date.ToString("dd MMM yyyy")</span>
                        </div>

                        <div class="post-content d-flex flex-column">

                            <h3 class="post-title">@item.BlogName</h3>

                            <div class="meta d-flex align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person"></i> <span class="ps-2">@item.HrTeam.HrTeamSAA</span>
                                </div>
                                <span class="px-3 text-black-50">/</span>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-folder2"></i> <span class="ps-2">@item.BlogCategory.BlogCategoryName</span>
                                </div>
                            </div>

                            <hr>

                            <a href="/Blog/Index/@item.BlogID" class="readmore stretched-link"><span>Daha Ətraflı</span><i class="bi bi-arrow-right"></i></a>

                        </div>

                    </div>
                </div><!-- End post item -->
            }
        </div>
    </div>
</section>
<!-- End Recent Blog Posts Section -->