@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "CategoryBlogList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/UpConstruction/assets/img/breadcrumbs-bg.jpg');">
        <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">
            <h2>@ViewBag.categorynameblog</h2>
            <ol>
                <li><a href="/Main/Index/">Ana Səhifə</a></li>
                <li>Bloqlar</li>
            </ol>
        </div>
    </div><!-- End Breadcrumbs -->
</main><!-- End #main -->
<section id="blog" class="blog">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 posts-list">

            @foreach (var item in Model)
            {


                <div class="col-xl-4 col-md-6">
                    <div class="post-item position-relative h-100">

                        <div class="post-img position-relative overflow-hidden" style="height:300px;">
                            <img src="@item.BlogImage" class="img-fluid" alt="" style="object-fit: fill; height: 300px; width:450px">
                            <span class="post-date">@item.BlogCreationDate.Date.ToString("dd MMM yyyy")</span>
                        </div>

                        <div class="post-content d-flex flex-column">

                            <h3 class="post-title">@item.BlogName</h3>

                            <div class="meta d-flex align-items-center">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person"></i> <span class="ps-2">@item.HrTeam.HrTeamSAA</span>
                                </div>
                                <span class="px-3 text-black-50">/</span>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-folder2"></i> <span class="ps-2">@item.BlogCategory.BlogCategoryName</span>
                                </div>
                            </div>

                            <p>
                                @item.BlogContent.Substring(0, 40)...
                            </p>

                            <hr>

                            <a href="/Blog/Index/@item.BlogID" class="readmore stretched-link"><span>Ardını Oxu</span><i class="bi bi-arrow-right"></i></a>

                        </div>

                    </div>
                </div><!-- End post list item -->
            }
        </div><!-- End blog posts list -->

        <div class="blog-pagination">
            <ul class="justify-content-center">
                @*@Html.PagedListPager((IPagedList)Model, page => Url.Action("BlogPage", new { page }))*@
            </ul>
        </div><!-- End blog pagination -->

    </div>
</section><!-- End Blog Section -->