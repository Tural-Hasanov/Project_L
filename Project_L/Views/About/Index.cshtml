@using EntityLayer.Concrete
@model List<HrTeam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('/UpConstruction/assets/img/breadcrumbs-bg.jpg');">
        <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

            <h2>Haqqımızda</h2>
            <ol>
                <li><a href="/Main/Index/">Ana Səhifə</a></li>
                <li>Haqqımızda</li>
            </ol>
        </div>
    </div><!-- End Breadcrumbs -->
</main><!-- End #main -->
<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="row position-relative">

            <div class="col-lg-7 about-img" style="background-image: url('@ViewBag.a') "></div>

            <div class="col-lg-7">
                <h2>AZFEN BİRGƏ MÜƏSSİSƏSİ</h2>
                <div class="our-story">
                    <h4 class="text-lowercase">1996 cı ildən</h4>
                    <h3>Bizim Hekayəmiz</h3>
                    <p>@ViewBag.b</p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> <span>İşçilərin sağlamlığı</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Təhlükəsiz iş saatları</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Keyfiyyətin təminatı</span></li>
                    </ul>
                    <p>@ViewBag.c1</p>

                    <div class="watch-video d-flex align-items-center position-relative">
                        <i class="bi bi-play-circle"></i>
                        <a href="https://www.youtube.com/watch?v=6ZeY8NeTkS0" class="glightbox stretched-link">Videonu İzlə</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>
<!-- End About Section -->
<!-- ======= Our Team Section ======= -->
<section id="team" class="team  section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>İnsan Resursları Departamenti</h2>
            <p>MƏRKƏZİ ŞƏRQİ AZƏRİ LAYİHƏSİ</p>
        </div>

        <div class="row gy-5">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 member" data-aos="fade-up" data-aos-delay="100">
                    <div class="member-img">
                        <img src="@item.HrTeamImageUrl" class="img-fluid" alt="" style="height:350px">
                        <div class="social">
                            <a href="@item.AboutTwitterAdress" target="_blank"><i class="bi bi-twitter"></i></a>
                            <a href="@item.AboutFacebookAdress" target="_blank"><i class="bi bi-facebook"></i></a>
                            <a href="@item.AboutInstagramAdress" target="_blank"><i class="bi bi-instagram"></i></a>
                            <a href="@item.AboutLinkedinAdress" target="_blank"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                    <div class="member-info text-center">
                        <h4>@item.HrTeamSAA</h4>
                        <span>@item.HrTeamPosition</span>
                        <p>@item.HrTeamOpinion</p>
                    </div>
                </div>
            }
            <!-- End Team Member -->

        </div>

    </div>
</section><!-- End Our Team Section -->