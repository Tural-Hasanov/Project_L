@using EntityLayer.Concrete
@model AzfenEmployee
@{
    ViewData["Title"] = "Change";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-head-color-box navy-bg p-lg text-center">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                        @Html.DisplayFor(x => x.SAA)
                    </h2>
                    <h5>@Html.DisplayFor(x => x.Position)</h5>
                </div>
                <img src="@ViewBag.Img" class="rounded-circle circle-border m-b-md" style="height:300px" alt="profile">
                <div>
                    <span>100 Tweets</span> |
                    <span>350 Following</span> |
                    <span>610 Followers</span>
                </div>
            </div>
        </div>

    </div>

    @using (Html.BeginForm("Change", "ListOfEmployee", FormMethod.Post))
    {

        <div class="row">
            <div class="col-lg-12">
                <div class="widget navy-bg no-padding">
                    <div class="p-m">
                        <h1 class="m-xs"><b>Vəzifə və peşə dəyişkənliyi</b></h1>
                        <br />
                        @Html.TextAreaFor(x => x.OccupationalChange, 5, 225, new { @class = "Form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Specialist Degree</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.SpecialistDegree)</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Employment Start Date</i>
                        </div>
                        <div class="col-9 text-right">
                            <h2 class="font-bold">@Html.TextBoxFor(x => x.EmploymentStartDate)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Resignation Date</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.ResignationDate)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Project Status</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.ProjectStatus)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Department</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.Department)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Position ENG</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.PositionEng)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Classification</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.Classification)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Personnel Code</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.PersonnelCode)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>LS/RE</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.LSRE)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Nationality</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.Nationality)</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="widget style1 navy-bg">
                    <div class="row vertical-align">
                        <div class="col-3">
                            <i>Gender</i>
                        </div>
                        <div class="col-9 text-right">

                            <h2 class="font-bold">@Html.TextBoxFor(x => x.Gender)</h2>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success" onclick="return confirm('Dəyişiklik etməyə əminsinizmi?')">Save</button>
            </div>

        </div>


    }
    <br />
</div>
