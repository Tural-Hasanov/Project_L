@using EntityLayer.Concrete
@model AzfenEmployee
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-head-color-box navy-bg p-lg text-center">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                        @Html.DisplayFor(x => x.SAA)
                    </h2>
                    <h5>@Html.DisplayFor(x => x.Position)</h5>
                </div>
                <img src="@ViewBag.Img" class="rounded-circle circle-border m-b-md" style="height:300px" alt="profile">
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="widget navy-bg no-padding">
                <div class="p-m">
                    <h1 class="m-xs"><b>Vəzifə və peşə dəyişkənliyi</b></h1>
                    <br />
                    <h5 class="font-bold no-margins">
                        @Html.DisplayFor(x => x.OccupationalChange)
                    </h5>
                </div>
                @*<div class="flot-chart">
                    <div class="flot-chart-content" id="flot-chart1"></div>
                </div>*@
            </div>
        </div>


    </div>


    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-2">
                        <i>Specialist Degree</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.SpecialistDegree)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i>Employment Start Date</i>
                    </div>
                    <div class="col-9 text-right">
                        <h2 class="font-bold">
                            @if (Model.EmploymentStartDate != null)
                            {
                                @Model.EmploymentStartDate.Value.ToString("dd.MM.yyyy")
                            }
                            else
                            {
                                @Html.Display("")
                            }
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i>Resignation Date</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@ViewBag.ResignationDate</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i>Project Status</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.ProjectStatus)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-2">
                        <i>Department</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.Department)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-2">
                        <i>Position ENG</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.PositionEng)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-2">
                        <i>Classification</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.Classification)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i>Personnel Code</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.PersonnelCode)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-1">
                        <i>LS/RE</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.LSRE)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i>Nationality</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.Nationality)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-1">
                        <i>Gender</i>
                    </div>
                    <div class="col-9 text-right">

                        <h2 class="font-bold">@Html.DisplayFor(x => x.Gender)</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>

