@model SignInViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/Admin/css/animate.css" rel="stylesheet">
    <link href="/Admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated bounceIn">
        <div>
            <div>

                <h1 class="logo-name" style="color: blue; text-align: center ">AZF</h1>

            </div>
            <h3>Xoş Gəlmisiniz</h3>
            <p>
                Aşağıda boş xanaları doldurun...
                <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
            </p>
            <p>Profilinizə daxil olmaq üçün, aşağıda boş xanaları doldurun...</p>
            <form class="m-t" role="form" method="post">
                <div class="form-group">
                    <input asp-for="@Model.username" class="form-control" placeholder="İstifadəçi adı" required="">
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.username)</h5>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.passWord" class="form-control" placeholder="Şifrə" required="">
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.username)</h5>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b fadeIn">Daxil ol</button>
                <h4 style="color:red">@ViewData["Message"]</h4>

                <a href="#"><small>Şifrəni unutdun?</small></a>
                <p class="text-muted text-center"><small>Hesabınız yoxdu?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Index/">Hesab Yarat</a>
            </form>
            <p class="m-t"> <small>Həsənov Tural || tərəfindən &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/Admin/js/jquery-3.1.1.min.js"></script>
    <script src="/Admin/js/popper.min.js"></script>
    <script src="/Admin/js/bootstrap.js"></script>

</body>

</html>
