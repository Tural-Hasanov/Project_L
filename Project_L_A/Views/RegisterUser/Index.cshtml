@model SignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="/Admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="/Admin/css/animate.css" rel="stylesheet">
    <link href="/Admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name" style="color: blue; text-align: center ">AZF</h1>
                
            </div>
            <h3>Qeydiyyat</h3>
            <p>Yeni Hesab Yaratmaq</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Ad və Soyad">
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.NameSurname)</h5>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email" >
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.Mail)</h5>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.PassWord" placeholder="Şifrə" >
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.PassWord)</h5>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Təkrar Şifrə" >
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.ConfirmPassword)</h5>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="İstifadəçi adı" >
                    <h5 style="color:red">@Html.ValidationMessageFor(x => x.UserName)</h5>
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" required=""><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Qeydiyyat</button>

                <p class="text-muted text-center"><small>Hesabınız var?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/LoginUser/Index/">Giriş</a>
                <div style="color:red" asp-validation-summary="ModelOnly"></div>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="/Admin/js/jquery-3.1.1.min.js"></script>
    <script src="/Admin/js/popper.min.js"></script>
    <script src="/Admin/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="/Admin/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
