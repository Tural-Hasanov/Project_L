@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Visitor Əlavə Etmək</h1>
<form method="post">

    <label>Visitor Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Visitor SurName</label>
    <input type="text" asp-for="SurName" class="form-control"/>
    <br />
    <label>Visitor Mail</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    <label>Visitor Şəhər</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Visitor Ölkə</label>
    <input type="text" asp-for="Country"  class="form-control"/>

    <br />
    <button class="btn btn-primary">Əlavə Et</button>

</form>
